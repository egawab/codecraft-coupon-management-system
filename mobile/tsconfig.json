{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "jsx": "react-native",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../src/shared/*"],
      "@features/*": ["../src/features/*"],
      "@mobile/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../src/shared/**/*",
    "../src/features/**/*"
  ],
  "exclude": [
    "node_modules",
    "../src/app",
    "../src/lib"
  ]
}
