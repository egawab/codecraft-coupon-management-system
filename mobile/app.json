{
  "expo": {
    "name": "Kobonz",
    "slug": "kobonz",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0070f3"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kobonz.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes for coupons.",
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show nearby deals."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0070f3"
      },
      "package": "com.kobonz.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "CAMERA",
        "NOTIFICATIONS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-notifications"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
