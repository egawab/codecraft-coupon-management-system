# Production Environment Variables
# Copy this to .env.production and fill in your actual values

# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://username:password@host:port/database?schema=public&sslmode=require"

# NextAuth Configuration
NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET="your-production-secret-key-generate-with-openssl-rand-base64-32"
JWT_SECRET="your-production-jwt-secret-generate-with-openssl-rand-base64-32"

# Google OAuth (Production credentials)
GOOGLE_CLIENT_ID="your-production-google-client-id"
GOOGLE_CLIENT_SECRET="your-production-google-client-secret"

# Upstash Redis (Production instance)
UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-production-token"

# Resend Email (Production)
RESEND_API_KEY="re_your_production_resend_api_key"
EMAIL_FROM="noreply@yourdomain.com"

# App Configuration
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://yourdomain.com"

# Stripe (Production keys)
STRIPE_SECRET_KEY="sk_live_your_stripe_production_secret_key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_your_stripe_production_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_production_webhook_secret"

# Stripe Product & Price IDs (Production)
STRIPE_BASIC_PRICE_ID="price_live_basic_monthly"
STRIPE_BASIC_PRODUCT_ID="prod_live_basic"
STRIPE_PRO_PRICE_ID="price_live_pro_monthly"
STRIPE_PRO_PRODUCT_ID="prod_live_pro"
STRIPE_ENTERPRISE_PRICE_ID="price_live_enterprise_monthly"
STRIPE_ENTERPRISE_PRODUCT_ID="prod_live_enterprise"

# Optional: External Services
# NEXT_PUBLIC_ANALYTICS_ID="G-XXXXXXXXXX"
# NEXT_PUBLIC_SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
# API_KEY="your-secure-api-key-for-external-access"

# Security
# ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"
# TRUSTED_IPS="1.2.3.4,5.6.7.8"
