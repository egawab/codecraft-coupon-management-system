# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"
JWT_SECRET="your-jwt-secret-here-generate-with-openssl-rand-base64-32"

# Google OAuth (Get from Google Cloud Console)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Upstash Redis (Get from console.upstash.com)
UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# Resend Email (Get from resend.com)
RESEND_API_KEY="re_your_resend_api_key"
EMAIL_FROM="noreply@yourdomain.com"

# App Configuration
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Stripe (Get from stripe.com/dashboard)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Stripe Product & Price IDs (Create in Stripe Dashboard)
STRIPE_BASIC_PRICE_ID="price_basic_monthly"
STRIPE_BASIC_PRODUCT_ID="prod_basic"
STRIPE_PRO_PRICE_ID="price_pro_monthly"
STRIPE_PRO_PRODUCT_ID="prod_pro"
STRIPE_ENTERPRISE_PRICE_ID="price_enterprise_monthly"
STRIPE_ENTERPRISE_PRODUCT_ID="prod_enterprise"

# Optional: External Services
# NEXT_PUBLIC_ANALYTICS_ID=""
# NEXT_PUBLIC_SENTRY_DSN=""
# API_KEY="your-api-key-for-external-access"
